<Page
    x:Class="GoodbyeDPIUWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GoodbyeDPIUWP"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <TextBlock Text="GoodbyeDPIUWP" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
            <Button x:Name="StartProxyButton" Content="Стартовать прокси" Width="200" Height="50" Click="StartProxyButton_Click"/>
            <TextBlock x:Name="StatusText" Text="Прокси не запущен" FontSize="16" Margin="0,20,0,0"/>
            <TextBox x:Name="LogTextBox" Height="200" Width="400" TextWrapping="Wrap" AcceptsReturn="True"/>
        </StackPanel>
    </Grid>
</Page>
